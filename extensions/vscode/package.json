{
  "name": "melody",
  "displayName": "Melody",
  "description": "Melody syntax highlighting",
  "version": "0.13.10",
  "publisher": "yoavlavi",
  "icon": "melody.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoav-lavi/melody.git",
    "directory": "extensions/vscode"
  },
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "melody",
        "path": "./snippets.json"
      }
    ],
    "languages": [
      {
        "id": "melody",
        "aliases": [
          "Melody",
          "melody"
        ],
        "extensions": [
          ".mdy",
          ".melody"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "melody",
        "scopeName": "source.mdy",
        "path": "./syntaxes/melody.tmLanguage.json"
      }
    ]
  }
}
